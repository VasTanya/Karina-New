rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write;
    }
  }
}
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      allow read: if request.headers.referer.matches('https://karinas515.com') && request.headers.referer.matches('https:/admin.karinas515.com');
      allow write: if request.headers.referer.matches('https://admin.karinas515.com');
    }
  }
}
